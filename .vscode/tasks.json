{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [{
        "type": "shell",
        "command": "pwsh",
        "args": ["${workspaceFolder}/tools/build.ps1"],
        "label": "Build",
        "group": {
            "isDefault": true,
            "kind": "build"
        },
        "problemMatcher": [
            "$tsc"
        ],
        "presentation": {
            "echo": true,
            "reveal": "silent",
            "focus": false,
            "panel": "shared",
            "showReuseMessage": true,
            "clear": false
        },
    }]
}
